<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >


            <TextView
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:text="@string/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/RRToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <RelativeLayout
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bg_white"
                    android:elevation="@dimen/_10sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    >

                    <LinearLayout
                        android:id="@+id/llAddProduct"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                       <ImageView
                           android:layout_gravity="center"
                           android:src="@drawable/add_orders"
                           android:layout_width="@dimen/_80sdp"
                           android:layout_height="@dimen/_80sdp"
                           ></ImageView>

                        <TextView
                            android:id="@+id/txt_relt"
                            android:textStyle="bold"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14sdp"
                            android:text="Add New Product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RRProductList"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    >

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/black_new"
                            android:textSize="@dimen/_14sdp"
                            android:text="Product List"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <ImageView
                            android:src="@drawable/arw_right"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_new"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    >

                </View>

                <RelativeLayout
                    android:id="@+id/RRpurchesOrder"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    >

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/black_new"
                            android:textSize="@dimen/_14sdp"
                            android:text="Purchase Order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <ImageView
                            android:src="@drawable/arw_right"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_new"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    >

                </View>

                <RelativeLayout
                    android:id="@+id/RRstocktaking"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    >

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/black_new"
                            android:textSize="@dimen/_14sdp"
                            android:text="Stock - taking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <ImageView
                            android:src="@drawable/arw_right"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_new"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    >

                </View>

                <RelativeLayout
                    android:id="@+id/RRSupply"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    >

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/black_new"
                            android:textSize="@dimen/_14sdp"
                            android:text="Supplier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <ImageView
                            android:src="@drawable/arw_right"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/gray_new"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    >

                </View>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    >

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/black_new"
                            android:textSize="@dimen/_14sdp"
                            android:text="Stock Transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <ImageView
                            android:src="@drawable/arw_right"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
