<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <RelativeLayout
                android:visibility="visible"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:src="@drawable/back"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">

                </ImageView>

            </RelativeLayout>


            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:text="Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


            <RelativeLayout
                android:layout_alignParentRight="true"
                android:visibility="visible"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:src="@drawable/menu"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">

                </ImageView>



            </RelativeLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/RRToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:background="@drawable/search_one"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <ImageView
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:id="@+id/img_search"
                        android:src="@drawable/serach_icon"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_search"
                        android:textSize="@dimen/_16sdp"
                        android:text="Search and add product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        >

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_16sdp"
                        android:text="All(0 order)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:visibility="visible"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/filter"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp">

                        </ImageView>

                    </RelativeLayout>


                </RelativeLayout>

                <ImageView
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/emty_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </ImageView>


                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:text="No Orders Found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    >

                </TextView>

                <TextView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:text="No results were found for your search. Please reset Filter to see oher results."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    >

                </TextView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </RelativeLayout>


</layout>
