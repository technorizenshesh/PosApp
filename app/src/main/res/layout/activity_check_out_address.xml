<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back">

                </ImageView>

            </RelativeLayout>


            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:text="@string/checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/RRToolbar"
            android:layout_above="@+id/ll_singUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:padding="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/llDelivey"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/process_circle"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >

                        </ImageView>

                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/delivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_marginRight="-10dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/gray_new"
                        android:layout_toLeftOf="@+id/lladdress"
                        android:layout_toRightOf="@+id/llDelivey"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </View>

                    <LinearLayout
                        android:id="@+id/lladdress"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/blue_circle_new"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >
                        </ImageView>

                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                       </TextView>

                    </LinearLayout>

                    <View
                        android:layout_marginRight="-10dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/gray_new"
                        android:layout_toLeftOf="@+id/llpayment"
                        android:layout_toRightOf="@+id/lladdress"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </View>

                    <LinearLayout
                        android:id="@+id/llpayment"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/blue_circle"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            >
                        </ImageView>

                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/payments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                </RelativeLayout>


                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street 1"
                    android:textColor="@color/txtgray"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:elevation="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/edt_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:text="21, Alex Davidson Avenue"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/edtgray" />

                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street 2"
                    android:textColor="@color/txtgray"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:elevation="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/edt_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:text="21, Alex Davidson Avenue"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/edtgray" />


                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/txtgray"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:elevation="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/edt_border"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:text="Victoria Island"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/edtgray" />

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textColor="#B8B8B8"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:elevation="@dimen/_3sdp"
                            android:textSize="@dimen/_12sdp"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/edt_border"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:text="Lagos State"
                            android:inputType="textEmailAddress"
                            android:textColor="#232333" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textColor="#B8B8B8"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:elevation="@dimen/_3sdp"
                            android:textSize="@dimen/_12sdp"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/edt_border"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:text="Nigeria"
                            android:inputType="textEmailAddress"
                            android:textColor="#232333" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/RRRefoundDetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <TextView
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:layout_toLeftOf="@+id/imgMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_blue_new"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:text="@string/back"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                    <TextView
                        android:id="@+id/txtNext"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1"
                        android:layout_toLeftOf="@+id/imgMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:text="@string/next"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>