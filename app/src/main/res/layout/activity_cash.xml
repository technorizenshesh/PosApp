<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:visibility="visible"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:src="@drawable/back"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">

                </ImageView>

            </RelativeLayout>


            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:text="Cashbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RRone"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/RRToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/txtFilter"
                    android:padding="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableRight="@drawable/btm_arw"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp"
                    android:text="31/7/21 - 6/8/21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/txtLocation"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableRight="@drawable/btm_arw"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp"
                    android:text="All Locations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:background="@color/gray_new"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/RRone"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            >

        </View>

        <RelativeLayout
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="ENDING BALANCE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="276,750,100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </ImageView>


    </RelativeLayout>


</layout>
