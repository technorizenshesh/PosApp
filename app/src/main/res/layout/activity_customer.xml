<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:visibility="visible"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:src="@drawable/back"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">

                </ImageView>

            </RelativeLayout>


            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:text="Customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:visibility="visible"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">

                </ImageView>

            </RelativeLayout>


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/RRToolbar"
            android:layout_above="@+id/ll_singUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/RRmenu"
                    android:layout_toRightOf="@+id/RRback"
                    android:id="@+id/RRsearch"
                    android:backgroundTint="#0062DB"
                    android:background="@drawable/search_one"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <ImageView
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:id="@+id/img_search"
                        android:src="@drawable/serach_icon"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_search"
                        android:textSize="@dimen/_12sdp"
                        android:text="Enter Name, phone number,Code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        >

                    </TextView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/txtSales"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_14sdp"
                        android:text="All"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TextView>


                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/txtFinancy"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/natural_gray"
                        android:textSize="@dimen/_14sdp"
                        android:text="Active"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    >

                    <View
                        android:id="@+id/viewSales"
                        android:layout_weight="1"
                        android:background="@color/blue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </View>


                    <View
                        android:id="@+id/viewFINANCE"
                        android:layout_weight="1"
                        android:background="@color/natural_gray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </View>


                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_16sdp"
                        android:text="Supplier (2)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/RRfilter"
                        android:layout_alignParentRight="true"
                        android:visibility="visible"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:src="@drawable/filter"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp">

                        </ImageView>

                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14sdp"
                            android:text="LA PHU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14sdp"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/txtgray"
                            android:textSize="@dimen/_14sdp"
                            android:text="097354852146"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_14sdp"
                            android:text="Active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/txtgray"
                            android:textSize="@dimen/_14sdp"
                            android:text="HOAI DU’C, Huyen Hoai Durc, Ha Noi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/gray_new"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    >

                </View>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14sdp"
                            android:text="LA PHU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14sdp"
                            android:text="28,000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/txtgray"
                            android:textSize="@dimen/_14sdp"
                            android:text="-----"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_14sdp"
                            android:text="Active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/txtgray"
                            android:textSize="@dimen/_14sdp"
                            android:text="HOAI DU’C, Huyen Hoai Durc, Ha Noi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>