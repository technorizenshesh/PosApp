<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/RRToolbar"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:visibility="visible"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:src="@drawable/back"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">

                </ImageView>

            </RelativeLayout>

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:text="Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/RRToolbar"
            android:layout_above="@+id/ll_singUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_14sdp"
                        android:text="@string/source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    </TextView>

                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/btm_arw"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        >

                    </ImageView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <RelativeLayout
                        android:background="@drawable/border_blue"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:text="Sendo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:text="Shopee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:text="Tiki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </TextView>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <RelativeLayout
                        android:background="@drawable/border_blue"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:text="Male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:text="Female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_14sdp"
                        android:text="Product Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    </TextView>

                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/btm_arw"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        >

                    </ImageView>

                </RelativeLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <RelativeLayout
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:text="Normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14sdp"
                            android:text="Serial/ IMEI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <RelativeLayout
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:text="Lots Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="invisible"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14sdp"
                            android:text="Serial/ IMEI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_14sdp"
                        android:text="Price Range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    </TextView>

                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/btm_arw"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        >

                    </ImageView>

                </RelativeLayout>


                <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:absoluteMaxValue="150"
                    app:absoluteMinValue="20" />


                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    >

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/border_blue_new"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/restfilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/border_blue"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/startfilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </TextView>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>